<Page x:Class="Factory.Pages.ViewingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Factory.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewingPage">

    <Grid>
        <DataGrid x:Name="DG_View">
            <DataGrid.Columns>
                <DataGridTextColumn Header="FurnID"
                                    Binding ="{Binding FurnID}"/>
                <DataGridTextColumn Header="Название"
                                    Binding ="{Binding Название}"/>
                <DataGridTextColumn Header="Материал"
                                    Binding ="{Binding Материал}"/>
                <DataGridTextColumn Header="Стиль"
                                    Binding ="{Binding Стиль}"/>
                <DataGridTextColumn Header="Кол_во_на_складе"
                                    Binding ="{Binding Кол_во_на_складе}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
